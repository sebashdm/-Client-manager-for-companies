                    <label for="email" class="sr-only">Salario</label>
                    <input type="text" name="txt_salary" id="email" class="form-control" placeholder="Salario">
                  </div>

                  <div class="form-group">
                    <label for="email" class="sr-only">Deducciones</label>
                    <input type="text" name="txt_deductions" id="email" class="form-control" placeholder="Deducciones">
                  </div>


                  <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="txt_email" id="email" class="form-control" placeholder="Email">
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Telefono fijo</label>
                    <input type="text" name="txt_phone" id="email" class="form-control" placeholder="Telefono Fijo">
                  </div>

                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Celular</label>
                    <input type="text" name="txt_movilphone" id="email" class="form-control" placeholder="Numero celular">
                  </div>

                    <label for="logo">Foto empleado</label>
                   <input type="file" name="picture"><br><br>

                    <label>Hoja de Vida: </label>
                    <input type="file" name="curriculum"><br><br>

                  <button type="submit" class="btn btn-block login-btn mb-4">Enviar</button>
                </form>

